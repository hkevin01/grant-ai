{
  "id": "general_grant_v1",
  "name": "General Grant Application Template",
  "description": "Standard template for general grant applications",
  "version": "1.0",
  "created_at": "2024-01-01T00:00:00Z",
  "fields": [
    {
      "id": "org_name",
      "label": "Organization Name",
      "field_type": "text",
      "required": true,
      "validation": {
        "min_length": 2,
        "max_length": 100
      },
      "auto_fill": "name"
    },
    {
      "id": "org_description",
      "label": "Organization Description",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 50,
        "max_length": 1000
      },
      "auto_fill": "description"
    },
    {
      "id": "project_title",
      "label": "Project Title",
      "field_type": "text",
      "required": true,
      "validation": {
        "min_length": 5,
        "max_length": 200
      }
    },
    {
      "id": "project_description",
      "label": "Project Description",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 100,
        "max_length": 2000
      }
    },
    {
      "id": "project_goals",
      "label": "Project Goals and Objectives",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 100,
        "max_length": 1500
      }
    },
    {
      "id": "target_population",
      "label": "Target Population",
      "field_type": "text",
      "required": true,
      "validation": {
        "min_length": 10,
        "max_length": 300
      },
      "auto_fill": "target_demographics"
    },
    {
      "id": "project_duration",
      "label": "Project Duration (months)",
      "field_type": "number",
      "required": true,
      "validation": {
        "min_value": 1,
        "max_value": 60
      }
    },
    {
      "id": "requested_amount",
      "label": "Requested Grant Amount (USD)",
      "field_type": "number",
      "required": true,
      "validation": {
        "min_value": 1000,
        "max_value": 1000000
      }
    },
    {
      "id": "budget_breakdown",
      "label": "Budget Breakdown",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 100,
        "max_length": 2000
      }
    },
    {
      "id": "timeline",
      "label": "Project Timeline",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 100,
        "max_length": 1500
      }
    },
    {
      "id": "expected_outcomes",
      "label": "Expected Outcomes and Impact",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 100,
        "max_length": 1500
      }
    },
    {
      "id": "evaluation_plan",
      "label": "Evaluation and Monitoring Plan",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 100,
        "max_length": 1500
      }
    },
    {
      "id": "sustainability",
      "label": "Project Sustainability",
      "field_type": "textarea",
      "required": true,
      "validation": {
        "min_length": 100,
        "max_length": 1500
      }
    },
    {
      "id": "contact_name",
      "label": "Primary Contact Name",
      "field_type": "text",
      "required": true,
      "validation": {
        "min_length": 2,
        "max_length": 100
      },
      "auto_fill": "contact_name"
    },
    {
      "id": "contact_email",
      "label": "Primary Contact Email",
      "field_type": "email",
      "required": true,
      "auto_fill": "contact_email"
    },
    {
      "id": "contact_phone",
      "label": "Primary Contact Phone",
      "field_type": "text",
      "required": true,
      "validation": {
        "pattern": "^\\d{3}-\\d{3}-\\d{4}$"
      },
      "auto_fill": "contact_phone"
    },
    {
      "id": "org_website",
      "label": "Organization Website",
      "field_type": "url",
      "required": false,
      "auto_fill": "website"
    },
    {
      "id": "org_ein",
      "label": "Organization EIN",
      "field_type": "text",
      "required": false,
      "validation": {
        "pattern": "^\\d{2}-\\d{7}$"
      },
      "auto_fill": "ein"
    },
    {
      "id": "org_budget",
      "label": "Organization Annual Budget (USD)",
      "field_type": "number",
      "required": false,
      "validation": {
        "min_value": 0,
        "max_value": 10000000
      },
      "auto_fill": "annual_budget"
    },
    {
      "id": "org_location",
      "label": "Organization Location",
      "field_type": "text",
      "required": true,
      "validation": {
        "min_length": 5,
        "max_length": 100
      },
      "auto_fill": "location"
    }
  ]
} 